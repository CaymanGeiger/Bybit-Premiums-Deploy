// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model CoinFundingRate {
  id                     String     @default(cuid()) @id
  coinId                 Int?       @unique
  name                   String?
  symbolUrl              String?
  oneDayAverage          Float?
  threeDayAverage        Float?
  sevenDayAverage        Float?
  thirtyDayAverage       Float?
  ninetyDayAverage       Float?
  twentyFourHourVolume   Float?
  lastTickDirection      String?
}

model CoinBorrowRate {
  id                     String     @default(cuid()) @id
  coinId                 Int?       @unique
  name                   String?
  symbolUrl              String?
  oneDayAverage          Float?
  threeDayAverage        Float?
  sevenDayAverage        Float?
  thirtyDayAverage       Float?
  ninetyDayAverage       Float?
  spotVolume             Float?
  lastTickDirection      String
}

model CoinSymbolImage {
  id                     String     @default(cuid()) @id
  name                   String?    @unique
  thumbnail              String?
  small                  String?
  large                  String?
}
